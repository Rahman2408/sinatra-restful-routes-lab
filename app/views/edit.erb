<form action="/recipes/<%= @recipe.id %>/edit" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
<input type="text" id="name" name="name" placeholder="<%= @recipe.name %>">
<input type="text" id="ingredients" name="ingredients" placeholder="<%= @recipe.ingredients %>">
<input type="text" id="cook_time" name="cook_time" placeholder="<%= @recipe.cook_time %>">
<input type="submit" value="submit">
</form>